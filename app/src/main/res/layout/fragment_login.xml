<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.logon.LoginFragment" tools:layout_editor_absoluteY="48dp"
        tools:layout_editor_absoluteX="0dp">

    <!--  Password Label -->
    <!-- Login button -->
    <!-- Link to Registration Screen -->
    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:textColor="#372c24"
              android:text="Email"
              android:id="@+id/textView5" app:layout_constraintBottom_toTopOf="@+id/user_email"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"
              app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
              app:layout_constraintEnd_toEndOf="parent"/>
    <EditText android:layout_width="1019dp"
              android:layout_height="67dp"
              android:singleLine="true"
              android:id="@+id/user_email" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintBottom_toTopOf="@+id/user_pw" android:layout_marginBottom="104dp"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"/>
    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:textColor="#372c24"
              android:text="Password" android:layout_marginBottom="14dp"
              app:layout_constraintBottom_toTopOf="@+id/user_pw" app:layout_constraintTop_toBottomOf="@+id/user_email"
              app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText android:layout_width="1024dp"
              android:layout_height="73dp"
              android:singleLine="true"
              android:password="true"
              android:id="@+id/user_pw" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button android:id="@+id/btnLogin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#CD858383"
            android:text="Login"
            app:layout_constraintTop_toBottomOf="@+id/user_pw" android:layout_marginTop="76dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView android:id="@+id/link_to_register"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="Register here"
              android:gravity="center"
              android:textSize="20dip"
              android:textColor="#0b84aa"
              app:layout_constraintTop_toBottomOf="@+id/btnLogin" app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintVertical_bias="0.028" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/login_text"
            android:textSize="22dp"
            android:gravity="center"
            android:layout_width="252dp"
            android:layout_height="49dp" android:id="@+id/textView9"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/textView5"
            android:layout_marginTop="55dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>