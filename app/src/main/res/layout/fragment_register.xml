<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.register.RegisterFragment" tools:layout_editor_absoluteY="48dp"
        tools:layout_editor_absoluteX="0dp">

    <!--  Email Label -->
    <!-- Password Label -->
    <!-- Register Button -->
    <!-- Link to Login Screen -->
    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:textColor="#372c24"
              android:text="Email" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintHorizontal_bias="1.0" app:layout_constraintEnd_toEndOf="parent"
              android:id="@+id/textView8" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="288dp"
              app:layout_constraintBottom_toTopOf="@+id/textView7" app:layout_constraintVertical_bias="0.0"/>
    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:textColor="#372c24"
              android:text="Password" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
              android:id="@+id/textView7" app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.564"/>
    <EditText android:id="@+id/reg_password"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:password="true"
              android:singleLine="true"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintBottom_toTopOf="@+id/btnRegister"
              app:layout_constraintTop_toBottomOf="@+id/textView7" app:layout_constraintVertical_bias="0.0"/>
    <TextView android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:textColor="#372c24"
              android:text="Full Name" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
              android:id="@+id/textView10" app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toTopOf="@+id/textView8" app:layout_constraintVertical_bias="0.591"/>
    <EditText android:id="@+id/reg_fullname"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:singleLine="true"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView10"
              app:layout_constraintBottom_toTopOf="@+id/textView8" app:layout_constraintVertical_bias="0.0"/>
    <EditText android:id="@+id/reg_email"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:singleLine="true"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/textView8"
              app:layout_constraintBottom_toTopOf="@+id/reg_password" app:layout_constraintVertical_bias="0.0"/>
    <Button android:id="@+id/btnRegister"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Register New Account" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/reg_fullname"
            android:backgroundTint="#CD858383"
            app:layout_constraintVertical_bias="0.656"/>
    <TextView android:id="@+id/link_to_login"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="Already have an account? Login here"
              android:gravity="center"
              android:textSize="20dip"
              android:textColor="#025f7c" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/btnRegister" app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintVertical_bias="0.158"/>
    <TextView
            android:text="Register"
            android:layout_width="128dp"
            android:layout_height="56dp" android:id="@+id/textView11"
            android:textSize="32dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/textView10"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="By signing up you agree to our Terms. See how we collect and use your data in our Privacy Policy"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content" android:id="@+id/textView13"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg_password" app:layout_constraintVertical_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/btnRegister"/>

</androidx.constraintlayout.widget.ConstraintLayout>