<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">
    <ImageView
            android:src="@drawable/mixmatelogo"
            android:layout_width="316dp"
            android:layout_height="192dp" android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.048"/>
    <TextView
            android:text="@string/home_text"
            android:layout_width="210dp"
            android:layout_height="30dp" android:id="@+id/textView4"
            android:textSize="22dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.041"/>
    <TextView
            android:text="@string/home_paragraph"
            android:textSize="20dp"
            android:layout_width="330dp"
            android:layout_height="348dp"
            android:gravity="center"
            android:ems="10"
            android:id="@+id/editTextTextMultiLine"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.153"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>